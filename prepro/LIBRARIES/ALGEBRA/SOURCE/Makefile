################################################################################
#
#  NODE-PAIR CODE   -   Algebra Library
#
#  Department of Aerospace Engineering
#  Politecnico di Milano. 1995-2008
#
################################################################################

SHELL	 = /bin/sh

.SUFFIXES:
.SUFFIXES: .f .f90 .o

#-------------------------------------------------------------------------------
# SETTING COMPILERS VARIABLES
#-------------------------------------------------------------------------------
VOID=
CMPL_CFG_DIR=../../../PREPRO/SOURCE

ifneq ($(CMPL),$(VOID))
    
  ifeq ($(DEBUG),yes)
    include $(CMPL_CFG_DIR)/Makefile.$(CMPL).DBG
  else
    include $(CMPL_CFG_DIR)/Makefile.$(CMPL)    
  endif
    
endif  

#-------------------------------------------------------------------------------
# FOLDERS
#-------------------------------------------------------------------------------
DIRS = ./

#-------------------------------------------------------------------------------
# EXTERNAL LIBRARIES
#-------------------------------------------------------------------------------
LIBS =

#-------------------------------------------------------------------------------
# LOCAL OBJECTS
#-------------------------------------------------------------------------------
OBJS  = lin_algebra.o     \
        non_lin_algebra.o \
        derivatives.o

#-------------------------------------------------------------------------------
# COMMANDS
#-------------------------------------------------------------------------------
INCL_DIRS =
COMPILE   = $(CMP90) $(OPT90) $(INCL_DIRS)



#-------------------------------------------------------------------------------
# MAIN RULES
#-------------------------------------------------------------------------------
libalgebra.a: $(LIBS) $(OBJS)
	($(AR) libalgebra.a $(OBJS); ranlib libalgebra.a)

#-------------------------------------------------------------------------------
# RULES FOR LOCAL OBJECTS
#-------------------------------------------------------------------------------
lin_algebra.o:  lin_algebra.f90
	($(COMPILE)  lin_algebra.f90)

non_lin_algebra.o:  non_lin_algebra.f90
	($(COMPILE)  non_lin_algebra.f90)

derivatives.o:  derivatives.f90
	($(COMPILE)  derivatives.f90)



#-------------------------------------------------------------------------------
# CLEANING
#-------------------------------------------------------------------------------
.PHONY: subs all clean cleanskit

cleanLoc:
	rm -f *.o *.mod *.exe *.a

cleanAll:
	@echo
	@echo ' --------------------------------------------------------------------------'
	@echo '   Cleaning objects and libs in PREREQUISITE folders'
	@echo ' --------------------------------------------------------------------------'
	@for dir in $(DIRS); do    \
	echo Cleaning $$dir;       \
	(cd $$dir; make cleanLoc); \
	done
	@echo 

