#----------------------------------------
#  F77 COMPILER
#----------------------------------------
CMP77=mpif90 -c
OPT77= -O1 -check bounds -traceback
F77=$(CMP77)

#----------------------------------------
#  F90 COMPILER
#----------------------------------------
CMP90=mpif90 -c -heap-arrays 100
OPT90=-r8 -Bstatic -check bounds -traceback

#----------------------------------------
#  LINKER
#----------------------------------------
LNK=mpif90 -heap-arrays 100
LNK_OPT=-Bstatic

#----------------------------------------
#  C COMPILER
#----------------------------------------
CC=mpicc -c
COPT=-O1

#----------------------------------------
#  BUILD LIBRARY
#----------------------------------------
AR=ar rcv

#----------------------------------------
#  INCLUDE COMMANDS
#----------------------------------------
INCL_CMD=-I
LIBDIR_CMD=-L
LNKLIB_CMD=-l
