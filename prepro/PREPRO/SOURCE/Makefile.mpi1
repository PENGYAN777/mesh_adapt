#----------------------------------------
#  F77 COMPILER
#----------------------------------------
CMP77=mpifort -c
OPT77= -O1 -check bounds -traceback
F77=$(CMP77)

#----------------------------------------
#  F90 COMPILER
#----------------------------------------
CMP90=mpifort -c -heap-arrays 100
OPT90=-check bounds -traceback

#----------------------------------------
#  LINKER
#----------------------------------------
LNK=mpifort -heap-arrays 100
LNK_OPT=

#----------------------------------------
#  C COMPILER
#----------------------------------------
CC=mpicc -c
COPT=-O1

#----------------------------------------
#  BUILD LIBRARY
#----------------------------------------
AR=ar rcv

#----------------------------------------
#  INCLUDE COMMANDS
#----------------------------------------
INCL_CMD=-I
LIBDIR_CMD=-L
LNKLIB_CMD=-l
